        {{/each}} --}}
        {{/if}}

      </select>
      <br>
      <div class="csvbutton">
        <label for="">Upload Csv File</label>

        <input type="file" name="csvFile">
        <button class="btn btn-primary" type="submit" onclick="showConfirmation(event)">Upload</button>

      </div>


  </form>
