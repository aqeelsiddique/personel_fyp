<body>
  <form method="POST" action="/uploadcsv" id="add_user" class="table-wrapper" enctype="multipart/form-data">
    <h1>Upload CSV File</h1>
    <div class="form-grouxp">
      <a href="/imageques" class="btn btn-primary" class="imagetypemcq">Image</a>
      <a href="/add_Question" class="btn btn-primary" class="imagetypemcq">Text</a>



      <select class="form-control" id="machine" name="select_subject" placeholder="Select subject" required="true">
        {{#if select_subject}}
        {{#each select_subject }}
        <option type="text" value="" disabled selected hidden>Select a Subject</option>

        <option value={{this.name}} {{isSelected this._id ../question.select_subject.name}}>{{this.name}}</option>
        {{/each}}
        {{!-- {{else}}
        {{#each select_subject}}
